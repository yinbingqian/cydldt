            android:layout_width="100.0dip"
            android:layout_height="wrap_content" />

        

        <NumberPicker
            android:id="@+id/np_month"
            android:layout_width="60.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip" />
